<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UserInterface.MainDashboardController">

    <!-- Top Header (Optional) -->
    <top>
        <Label text="Pharmacy Management System - Dashboard" style="-fx-font-size: 18px; -fx-padding: 10px;" alignment="CENTER"/>
    </top>

    <!-- Center Section with Buttons -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
    			<Insets top="20" right="20" bottom="20" left="20"/>
			</padding>
            <!-- Navigation Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Inventory Management" onAction="#openInventoryManagement" prefWidth="200" prefHeight="100"/>
                <Button text="Prescription Tracking" onAction="#handleTrackPrescriptions" prefWidth="200" prefHeight="100"/>
                <Button text="Management Interface" onAction="#openManagementInterface" prefWidth="200" prefHeight="100"/>
            </HBox>
            <!-- Functional Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Process Prescription" onAction="#handleProcessPrescription" prefWidth="200" prefHeight="100"/>
                <Button text="Refill Prescription" onAction="#handleRefillPrescription" prefWidth="200" prefHeight="100"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <Label text="Welcome to the Pharmacy Management System!" style="-fx-font-size: 14px; -fx-padding: 10px;" alignment="CENTER"/>
    </bottom>
</BorderPane>