<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.LoginController">
    <center>
        <VBox alignment="CENTER" prefHeight="663.0" prefWidth="800.0" spacing="10">
            <Label style="-fx-font-size: 24px;" text="Pharmacy Management System" />
            <TextField fx:id="usernameField" prefWidth="200" promptText="Username" />
            <PasswordField fx:id="passwordField" onAction="#handleLogin" prefWidth="200" promptText="Password" />
            <Button onAction="#handleLogin" prefWidth="300" text="Login" />
            <Hyperlink onAction="#handleForgotPassword" text="Forgot Password?" />
            <Label fx:id="errorMessage" textFill="red" />
        </VBox>
    </center>
</BorderPane>
